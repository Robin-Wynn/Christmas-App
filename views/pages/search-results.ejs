<%- include('../partials/header') %>

<main class="main" id="main">

    <div class="container mt-5 background-container">
        <p>
            Search Term: "<%= term %>"
            <% if (table) { %>
                <span class="text-muted">(Table: <%= table %>)</span>
            <% } %>
        </p>

        <% if (error) { %>
            <p class="text-danger"><%= error %></p>
        <% } %>

        <% if (results.length === 0) { %>
            <p>No results found.</p>
            <a href="/" class="btn btn-success mt-3">Back Home</a>
        <% } else { %>

            <table class="table table-striped table-hover table-bordered border-danger responsive mt-4">
                <thead>
                    <tr>
                        <% Object.keys(results[0]).forEach(key => { %>
                            <th><%= key %></th>
                        <% }) %>
                    </tr>
                </thead>
                <tbody>
                    <% results.forEach(row => { %>
                        <tr>
                            <% Object.keys(row).forEach(key => { %>
                                <td>
                                    <% if (key.includes('img')) { %>
                                        <img src="/images/<%= row[key] %>" width="80" alt="<%= key %> img">
                                    <% } else { %>
                                        <%= row[key] %>
                                    <% } %>
                                </td>
                            <% }) %>
                        </tr>
                    <% }) %>
                </tbody>
            </table>

            <a href="/" class="btn btn-success mt-3">Back Home</a>

        <% } %>
    </div>

</main>

<%- include('../partials/footer') %>