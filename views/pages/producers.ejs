<%- include('../partials/header') %>

<main class="main" id="main">

    <div class="container">

        <nav class="nav justify-content-center">

            <a href="/producer-create" class="nav-link">Producer Create Form</a>

        </nav>

    </div>

    <div class="container">

        <div class="row row-cols-2 row-cols-md-2 row-cols-lg-5 g-3">

            <% producers.forEach(producer => { %>
                
                <div class="col">

                    <div class="container background-container">

                        <div class="name text-capitalize">
    
                            <p><%= producer.producer %></p>
    
                        </div>
    
                        <div class="container actors-programs">
    
                            <a href="/producer/<%= producer.producer_id %>/programs" class="programs">Programs</a>
    
                        </div>

                    </div>

                </div>

            <% }) %>

        </div>

    </div>

    <!-- pagination controls -->

    <div class="pagination">

        <% if (pagination.hasPrevPage) { %>

            <a href="/producers?page= <%= pagination.currentPage - 1 %>"> ← Prev </a>

        <% } %>

        <span>Page <%= pagination.currentPage %> of <%= pagination.totalPages %></span>

        <% if (pagination.hasNextPage) { %>
         
            <a href="/producers?page= <%= pagination.currentPage + 1 %>"> Next → </a>

        <% } %>

    </div>

</main>

<%- include('../partials/footer') %>