<%- include('../partials/header') %>

<main class="main" id="main">

    <div class="container">

        <div class="row">

            <% if (data.length === 0) { %>
                <p class="text-center">This actor has no programs.</p>
            <% } else { %>
                <ul class="list-unstyled">
                    <% data.forEach(p => { %>
                        <li class="md-4">
                            <img src="/images/<%= p.img_url %>" alt="<%= p.title %> poster" class="program-thumb">
                            <h3><a href="/program/<%= p.program_id %>"><%= p.title %></a></h3>
                            <p>Released: <%= p.yr_released %></p>
                        </li>
                    <% }) %>
                </ul>
            <% } %>

        </div>

    </div>

</main>

<%- include('../partials/footer') %>